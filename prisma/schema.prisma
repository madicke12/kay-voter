generator client {
  provider = "prisma-client-js"
}

// bo demer si documentation prisma bi di nga guiss instruction yi
datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model electeur {
  id             String   @id @default(cuid()) @map("_id")
  cni            String   @unique
  numeroElecteur String   @unique
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  vote           vote[]
}

model administrateur {
  id        String   @id @default(cuid()) @map("_id")
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model election {
  id        String     @id @default(cuid()) @map("_id")
  titre     String
  date      String
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  candidats candidat[]
  vote      vote[]
  matricule String     @unique
}

model candidat {
  id         String   @id @default(cuid()) @map("_id")
  nom        String
  prenom     String
  cni        String
  // numeroElecteur String   @unique
  // dateNaissance DateTime
  // lieuNaissance String
  // profession    String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  electionId String
  photoUrl   String

  election election @relation(fields: [electionId], references: [id])
  vote     vote[]
  parti    parti?   @relation(fields: [partiId], references: [id])
  partiId  String?
}

model vote {
  id         String   @id @default(cuid()) @map("_id")
  electeurId String
  candidatId String
  electionId String
  createdAt  DateTime @default(now())
  //updatedAt  DateTime @updatedAt

  electeur electeur @relation(fields: [electeurId], references: [id])
  candidat candidat @relation(fields: [candidatId], references: [id])
  election election @relation(fields: [electionId], references: [id])
}

model ficheElecteur {
  id          String @id @default(cuid()) @map("_id")
  electeurCni String
}

model parti {
  id          String     @id @default(cuid()) @map("_id")
  nom         String
  matricule   String
  description String
  dateCreation String
  candidat    candidat[]
}
